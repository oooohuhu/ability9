<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:id="@+id/ll_head"
    android:background="@color/base_red">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_red">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:onClick="doBack"
            android:padding="8dp"
            android:src="@mipmap/icon_back"
            android:visibility="visible" />

        <ImageView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-200dp"
            android:onClick="doBack" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/public_margin_16dp"
            android:text="@string/cancel"
            android:textColor="@color/font_deep_gray"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:src="@mipmap/icon_ok"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/public_margin_16dp"
            android:clickable="true"
            android:gravity="right|center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_nomal"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:background="@color/divider" />-->
    </RelativeLayout>
</LinearLayout>